@model DynamicTimeTable.Models.TimeTable

<h2 style="margin-left:350px">Final Generated Timetable</h2>

<table style="border: solid black 1px; border-collapse: collapse;margin-left:350px;">
    @* <thead style="border: solid black 1px;">
        <tr>
            @for (int d = 1; d <= Model.WorkingDays; d++)
            {
                <th style="border: solid black 1px;">Day @d</th>
            }
        </tr>
    </thead> *@
    <tbody>
        @for (int i = 0; i < Model.SubjectsPerDay; i++)
